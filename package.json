{
  "name": "quizbattle",
  "private": true,
  "scripts": {
    "install:all": "bun run install:frontend && bun run install:contracts && bun run install:backend",
    "install:frontend": "cd frontend && bun install",
    "install:contracts": "cd contracts && npm install",
    "install:backend": "cd backend && go mod download",
    "dev": "bun run dev:frontend",
    "dev:frontend": "cd frontend && bun run dev",
    "dev:contracts": "cd contracts && npx hardhat node",
    "dev:backend": "cd backend && go run ./cmd/server",
    "build": "bun run build:contracts && bun run build:frontend && bun run build:backend",
    "build:frontend": "cd frontend && bun run build",
    "build:contracts": "cd contracts && npx hardhat compile",
    "build:backend": "cd backend && go build -o bin/server ./cmd/server",
    "test": "bun run test:contracts && bun run test:backend",
    "test:contracts": "cd contracts && npx hardhat test",
    "test:backend": "cd backend && go test ./..."
  }
}
